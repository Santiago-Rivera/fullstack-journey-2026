---
interface Props {
    title?: string
    description?: string
}

const {title = "Default title", description = "Default description"} = Astro.props
---

<div class="bg-sky-500 p-4 m-2 mb-3 rounded">
    <h1>{title}</h1>
    <p>
        {description}
    </p>
</div>

<style>
    .card {
        background-color: white;
        border-radius: 5px;
        box-shadow:
            0 2px 4px 0 rgba(0, 0, 0, 0.2),
            0 25px 50px 0 rgba(0, 0, 0, 0.1);
        color: black;
        padding: 20px;
        width: 300px;
        margin-bottom: 5px;
    }
</style>

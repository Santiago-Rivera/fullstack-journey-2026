---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5 text-center">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p>{project.description}</p>
        <button class="bg-blue-700 text-white px-4 py-2 rounded-md mt-4 hover:bg-blue-600">
          More info
        </button>
      </div>
      <div class="flex-1">
        <img src={project.image} class="w-72 m-auto" />
      </div>
    </div>
  ))
}
